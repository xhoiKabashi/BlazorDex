@inject NavigationManager NavigationManager

<div class="p-2 rounded-lg shadow-lg w-full bg-center bg-cover"  style="background-image: url('@url');">
    <!-- Chapter Header -->
    <div class="flex items-center mb-2">
        <div class="w-8 h-8 rounded-full bg-text-third  flex items-center justify-center text-red-500 text-xl font-bold">
            <!-- Placeholder for chapter icon or number -->
            <span>@ChapterNumber</span> <!-- Example Chapter Number -->
        </div>
        <h2 class="ml-4 text-lg font-bold tracking-widest text-text-third">@ChapterTitle</h2>
    </div>

    <!-- Chapter Status -->
    <div class="mb-2 flex justify-end items-end">
        @if (IsCompleted)
        {
        <span class=" text-green-400 font-medium ">Completed</span>

        }
        else if (IsOpen)
        {

        
         <button  @onclick="GoArena" class= " bg-text-third text-red-600 font-bold rounded-lg py-1 px-2">Explore</button>
        }
        else
        {

        <span class="  text-red-500 font-medium">Locked</span>
        }
    </div>
    <!-- Dialog Control Button -->
</div>


@code {
    [Parameter] public string? url { get; set; }
    [Parameter] public bool IsCompleted { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public int ProgressPercentage { get; set; }
    [Parameter] public int ChapterNumber { get; set; }
    [Parameter] public string? ChapterTitle { get; set; }
    [Parameter] public string? navUrl { get; set; }

    private void GoArena() => NavigationManager.NavigateTo(navUrl);
}
