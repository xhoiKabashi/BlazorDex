<div class=" w-full flex  px-2 gap-3 justify-around my-1">

    <div class=" flex flex-col items-center gap-1 text-text-main py-1 ">

        <p
            class=" w-full text-center bg-bg-second    rounded-md uppercase font-semibold tracking-widest"  style="background-color: rgba(255, 255, 255, 0.1);">
            Kreshnik</p>

        <div class=" flex justify-around gap-1 text-text-main py-1  rounded-md"  style="background-color: rgba(255, 255, 255, 0.1);">
            <div
                class=" flex justify-center items-center gap-1    px-1">
                <img src="image/icons/sword.png" alt="" class="h-6" />
                <p class="text-sm tracking-widest font-semibold ">@HeroDamage</p>
            </div>
            <div
                class=" flex justify-center items-center gap-1   px-1   rounded-md">
                 <img src="image/icons/armor.png" alt="" class="h-6" />
                <p class="text-sm tracking-widest font-semibold">@HeroArmor</p>
            </div>
            <div
                class=" flex justify-center items-center gap-1  px-1  rounded-md">
                <img src="image/icons/hermes.png" alt="" class="h-7" />
                <p class="text-sm tracking-widest font-semibold">@HeroSpeed</p>
            </div>
        </div>

    </div>

    <div class=" flex flex-col items-center gap-1 text-text-main py-1">
       <p
            class=" w-full text-center bg-bg-second    rounded-md uppercase font-semibold tracking-widest"  style="background-color: rgba(255, 255, 255, 0.1);">
            @EnemyName</p>
        <div class=" flex justify-around gap-1 text-text-main py-1  rounded-md"  style="background-color: rgba(255, 255, 255, 0.1);">
            <div
                class=" flex justify-center items-center gap-1   px-1">
                 <img src="image/icons/sword.png" alt="" class="h-6" />
                <p class="text-sm tracking-widest font-semibold">@EnemyDamage</p>
            </div>
            <div
                class=" flex justify-center items-center gap-1   px-1   rounded-md">
                 <img src="image/icons/armor.png" alt="" class="h-6" />
                <p class="text-sm tracking-widest font-semibold">@EnemyArmor</p>
            </div>
            <div
                class=" flex justify-center items-center gap-1  px-1  rounded-md">
                 <img src="image/icons/hermes.png" alt="" class="h-7" />
                <p class="text-sm tracking-widest font-semibold">@EnemySpeed</p>
            </div>
        </div>
    </div>

</div>





@code {



    [Parameter]

    public int? HeroSpeed { get; set; }
    [Parameter]

    public int? HeroDamage { get; set; }
    [Parameter]

    public int? HeroArmor { get; set; }

    [Parameter]

    public int EnemySpeed { get; set; }
    [Parameter]

    public int EnemyDamage { get; set; }
    [Parameter]

    public int EnemyArmor { get; set; }
    
    [Parameter]
    public string? EnemyName { get; set; }


}